{% extends 'layout/condominio.html.twig'%}
{% block titulo 'Contáctenos' %}
{% block contenido %}
<div class="main-content">
    <div class="container">                             
        <div class="row show-grid">
            <div class="col-md-12 col-sm-12" data-original-title="">
                <!-- BREADCRUMBS -->                    
                <div id="breadcrumb">
                    <ul>
                        <li class="home"><a href="{{ constant('ROOT') }}enlinea">MH Calidad Condominios</a></li>
                        <li>Contáctenos</li>
                    </ul>
                </div>
                <div class="clear_both"></div>
                <div class="col-wrapper">                        
                    <div class="row show-grid">
                        <!-- START LEFT-SIDE CONTACT FORM AREA -->
                        <div class="contact-form col-md-8 col-sm-8">
                            <div id="result">
                            </div>
                            <form name="contactForm" id="contactForm" method="POST" action="">
                                <div class="row">
                                <div class="control-group col-md-12 col-sm-12">
                                <input class="form-control" name="nombre" type="hidden" value="{{session.usuario.nombre}}">
                                <input class="form-control" name="email" type="hidden" value="{{session.usuario.email}}">
                                <input class="form-control" name="telefono" type="hidden" value="{{session.usuario.telefono1}}">
                                <input class="form-control" name="inmueble" type="hidden" value="{{inmueble.id_inmueble}}">
                                <input class="form-control" name="apto" type="hidden" value="{{inmueble.apto}}">
                                </div>
                                </div>
                               <div class="row">
                                    <div class="control-group col-md-6 col-sm-6">
                                        <label class="control-label">Tipo de Contacto<sup>*</sup></label>
                                        <div class="controls">
                                            <select class="col-md-12 col-sm-12" name="tipo" id="inputTipo">
                                                <option value="">Seleccione...</option>
                                                <option value="Información">Información</option>
                                                <option value="Quejas/Reclamos">Quejas/Reclamos</option>
                                                <option value="Otros">Otros</option>
                                            </select>
                                            <span class="help-inline">Seleccione el tipo de contacto.</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="control-group col-md-12 col-sm-12">
                                        <label for="textarea" class="control-label">Mensaje<sup>*</sup></label>
                                        <div class="controls">
                                            <textarea class="form-control" name="comments" rows="8" id="textarea"></textarea>
                                            <span class="help-inline">Ingrese su mensaje y/o requerimiento.</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="control-group form-button-offset">
                                    <input style="margin-top: 10px;" type="submit" class="btn btn-default btn-danger" value="Enviar Mensaje" />
                                </div>
                            </form>
                        </div>
                        <!-- END LEFT-SIDE CONTACT FORM AREA -->

                        <!-- BEGIN RIGHT-SIDE CONTACT FORM AREA -->
                        <div class="contact-info col-md-4 col-sm-4">
