    <!-- BEGIN ARTICLE CONTENT AREA -->
<div class="col-md-12 col-sm-12 main-column">
	<article>
		<h2><a href="#">{{'Publicar ' ~ reporte.descripcion}}</a></h2>
		{% if resultado is defined %}
			{% include 'misc/resultado-carga.html.twig' %}
		{% endif %}
		<form id="publicacion" 
            action="{{constant('ROOT')}}fiscal/publicacion/" 
            method="post" class="form-horizontal" 
            enctype="multipart/form-data">
            <input type="hidden" value="{{reporte.id}}" name="reporte"/>
            {# CLIENTE #}
            {% include 'misc/select.empresa.html.twig' %}

			{# PERIODO #}
			<div class="form-row">
				{% if reporte.quincena %}
				<div class="form-group col-md-3">
					<label for="quincena">Período<sup>*</sup></label>
					<select class="required form-control" name="quincena" id="quincena">
						<option value="0">---</option>
						<option value="1">1º Quincena</option>
						<option value="2">2º Quincena</option>
					</select>
				</div>
				{% endif %}
				{% if reporte.mes %}
                <div class="form-group col-md-2">
					<label for="mes">Mes<sup>*</sup></label>
                    <select class="required form-control" name="mes" id="mes">
						<option value="1">Enero</option>
						<option value="2">Febrero</option>
						<option value="3">Marzo</option>
						<option value="4">Abril</option>
						<option value="5">Mayo</option>
						<option value="6">Junio</option>
						<option value="7">Julio</option>
						<option value="8">Agosto</option>
						<option value="9">Septiembre</option>
						<option value="10">Octubre</option>
						<option value="11">Noviembre</option>
						<option value="12">Diciembre</option>
					</select>
                </div>
				{% endif %}
                {% if reporte.año %}
				<div class="form-group col-md-2">
                    <label for="año">Año<sup>*</sup></label>
                    <input type="text" class="required form-control" id="año" name="año">
                </div>
				{% endif %}
			</div>
            {# ARCHIVO #}
			<div class="form-row">
				<div class="form-group">
					<label class="control-label">Seleccione el archivo Cálculo de nómina<sup>*</sup></label>
					<input type="file" id="archivo" class="required" name="archivo" accept="application/pdf">
				</div>
			</div>
			{# BOTON PUBLICAR #}
			<div class="form-row">
				<div class="control-group form-button-offset col-md-6 col-sm-6">
					<input type="submit" value="Publicar" class="btn btn-danger">
				</div>
			</div>

		</form>
		<br/>
		<div class="text-divider5">
			<span></span>
		</div>

	</article>
	<!-- END ARTICLE CONTENT AREA -->
</div>